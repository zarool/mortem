<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #212121;" stylesheets="@../style/main.css"
      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.Controller">
    <children>
        <Text id="text" fx:id="text" fill="#f8f8f8" lineSpacing="4.0" text="" textAlignment="CENTER">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="40.0"/>
            </VBox.margin>
        </Text>
        <TextField fx:id="input" alignment="CENTER" disable="true" maxWidth="-Infinity" prefWidth="330.0"
                   style="-fx-border-color: white; -fx-background-color: none; -fx-border-radius: 4; -fx-text-fill: #bbbbbb;">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
            <font>
                <Font size="25.0"/>
            </font>
        </TextField>
        <Button id="startBtn" fx:id="loginBtn" onAction="#loginBtnClicked" mnemonicParsing="false"
                style="-fx-background-color: #232b2b; -fx-border-color: #000000; -fx-border-radius: 4;"
                stylesheets="@../style/main.css" text="Zacznij podróż..." textFill="#dddada">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </children>
</VBox>
