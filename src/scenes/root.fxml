<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane id="content" prefHeight="400.0" prefWidth="600.0" fx:controller="scenes.ControllerRoot"
            stylesheets="@../style/root.css" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <right>
        <VBox id="sideBar" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER"/>
    </right>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <TextArea fx:id="mainText" id="mainText" editable="false" minHeight="10.0" prefHeight="100.0"
                          prefWidth="200.0" wrapText="true"
                          BorderPane.alignment="CENTER"/>
            </center>
            <bottom>
                <TextField fx:id="input" id="input" onAction="#onEnter" BorderPane.alignment="CENTER"
                           prefHeight="30"/>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>
